{{#if loggedIn}}
  <h1 class="text-center">Courses</h1>
  <section>
      <a href="create" class="btn btn-warning ">Create Course</a>
      <form class="search float-right">
          <label>Search: </label>
          <input type="text" name="search" value={{search}}>
          <input type="submit" class="btn btn-primary" value="search">
      </form>
  </section>
  {{#if courses}}
  <div class="container mt-3">
      <div class="row ">
          <div class="card-deck d-flex justify-content-center">
            {{#each courses}}
              <div class="card mb-4">
                  <img class="card-img-top"
                      src="{{imageUrl}}"
                      alt="Card image cap" width="400">
                  <div class="card-body">
                      <h4 class="card-title">{{title}}</h4>
                  </div>
                  <div class="card-footer">
                      <a href="/details/{{_id}}"><button type="button" class="btn btn-primary">Details</button></a>
                      <small class="float-right">{{createdAt}}</small>
                  </div>
              </div>
            {{/each}}
          </div>
      </div>
  </div>

  {{else}}
  <h3 class="text-center">No courses...</h3>
  {{/if}}
 
  {{else}}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Tutorials</h1>
            <p class="lead">Start Self-Learning Today: Be the best Developer in the company</p>
        </div>
    </div>
    <div>
        <h1 class="text-center">Top Courses</h1>
        {{#if courses}}
        <div class="container mt-3">
            <div class="row d-flex justify-content-center">
                <div class="card-deck">
                    {{#each courses}}
                    <div class="card mb-4">
                        <img class="card-img-top"
                            src="{{imageUrl}}"
                            alt="Card image cap" width="400">
                        <div class="card-body">
                            <h4 class="card-title">{{title}}</h4>
                            <small class="float-right">Enrolled: {{enrolls}}</small>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        {{else}}
            <h4 class="text-center">No courses...</h4>
        </div>
        {{/if}}
    </div>

  {{/if}}